<%- include('header'); -%>

  <style>
    th {
      font-size: 13px;
    }

    .img-md {
      width: 100px;
      height: 80px;
    }
  </style>

  <section id="main-content" class="p-5">
    <section class="wrapper">
      <div class="row">
        <h1 style="color: #fff;">Portfolio</h1>
        <div class="col-lg-12 col-md-12 col-sm-12 p-5" style="background-color: aliceblue;">
          <form action='/post_entries' method="POST" enctype="multipart/form-data">
            <label for="name">Name:</label>
            <input type="text" class="form-control" name="name" value="<%= users.heading %>" required><br><br>
            <label for="body">Descrition:</label>
            <input type="text" class="form-control" name="body" value="<%= users.body %>" required><br><br>
            <div class="form-group dropdo">
              <!-- <input class="form-control text-white inputField" placeholder="type Services:" readonly> -->
              <label for="name">Services:</label>
              <select id="services" name="services">
                <option value="">------select-----</option>
                <option value="Vector_Artwork">Vector Artwork</option>
                <option value="Documents">Documents</option>
                <option value="Embroidery_Digitizing">Embroidery Digitizing</option>
                <option value="Custom_Creative">Custom Creative</option>
                <option value="Logo_Designing">Logo Designing</option>
                <option value="Digital_Marketing">Digital Marketing</option>
                <option value="Web_Development">Web Development</option>
                <option value="Image_Editing">Image Editing</option>
              </select>
            </div><br>
            <label for="image">Image:</label>
            <input type="file" name="image">
            <button class="btn btn-primary" type="submit">Upload</button>
          </form>
        </div>
        <! --/col-lg-6 -->


          <br><br>
          <div class="row mt" style="text-align: center;">
            <div class="col-md-12"><br><br>
              <div class="content-panel" style="background-color: aliceblue;">
                <table class="table table-striped table-advance table-hover">
                  <h4 class="p-5"><i class="fa fa-angle-right"></i> Portfolio Table</h4>
                  <hr>
                  <thead>
                    <tr>
                      <th><i class="fa fa-bullhorn"></i> Name</th>
                      <th class="hidden-phone"><i class="fa fa-question-circle"></i> Descrition</th>
                      <th><i class="fa fa-bookmark"></i>Services</th>
                      <th><i class="fa fa-bookmark"></i>Image</th>
                      <th><i class="fa fa-trash" aria-hidden="true"></i> Delete</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <%users.forEach(function(data){ %>
                      <tr>
                        <td>
                          <%= data.heading %>
                        </td>
                        <td class="hidden-phone">
                          <%= data.body %>
                        </td>
                        <td>
                          <%= data.services %></a>
                        </td>
                        <td> <img class="img-md" src="<%= data.image_name %>"></td>
                        <td>
                          <!-- <a href="" class="btn btn-primary btn-xs"><i class="bi bi-pencil-fill"></i></a> -->
                          <a href="delete-entries?id=<%= data.id %>" class="btn btn-danger btn-xs"
                            onclick="return confirm('Are you sure you want to delete Image <%= data.heading %>?');"><i
                              class="bi bi-trash-fill"></i></a>
                        </td>
                      </tr>
                      <% }); %>

                  </tbody>
                </table>
              </div><!-- /content-panel -->
            </div><!-- /col-md-12 -->
          </div><!-- /row -->
      </div>
    </section>
    <! --/wrapper -->
  </section><!-- /MAIN CONTENT -->

  <%- include('footer'); -%>