<%- include('header'); -%>

  <style>
    .bi {
      font-size: 16px !important;
    }

    .bi-trash-fill {
      color: red !important;
    }

    th {
      font-size: 13px;
    }


    .row {
      text-align: center !important;
    }

    th {
      font-size: 16px;
      padding: 0 !important;
      margin: 0 !important;
    }

    td {
      font-size: 16px;
      padding: 0 !important;
      margin: 0 !important;

    }

    /* tr {
      padding: 0 !important;
    } */

    .bi-pen-fill {
      font-size: 14px;

    }

    .bi-eye-fill {
      font-size: 17px;
    }

    .bi-cloud-arrow-down-fill {
      font-size: 16px;
    }
  </style>

  <section style="background-color: aliceblue;">
    <div id="app" class="container pt-2">
      <h3 class="mt-3">Production Team</h3>
      <!-- <button class="btn btn-primary mb-3">Add Production Team</button> -->
      <a class="btn btn-primary mb-3" href="/add_team">Add team member</a>

      <div class="row">
        <div class="col" style="overflow-x:auto;">
          <table style=" border-collapse: collapse;" id="user-table" class="display table-bordered" cellspacing="0"
            width="100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>phone no</th>
                <th>Service</th>
                <th colspan="2">action</th>

              </tr>

            </thead>
            <tbody>
              <% user.forEach(function(user){ %>
                <tr>
                  <td>
                    <%= user.id %>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= user.email %>
                  </td>
                  <td>
                    <%= user.password %>
                  </td>
                  <td>
                    <%= user.phone %>
                  </td>
                  <td>
                    <%= user.service %>
                  </td>
                  <td>
                    <a href="/edit_team?id=<%= user.id %>"
                      onclick="return confirm('Are you sure you want to edit Team ID <%= user.id %>?');"><i
                        class="bi bi-pencil-fill"></i></a>
                  </td>
                  <td>
                    <a href="/delete-team?id=<%= user.id %>"
                      onclick="return confirm('Are you sure you want to delete Team ID <%= user.id %>?');"><i
                        class="bi bi-trash-fill"></i></a>
                  </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>


  <%- include('footer'); -%>