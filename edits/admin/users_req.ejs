<%- include('header'); -%>
  <style>
    .row {
      text-align: center !important;
    }

    th {
      font-size: 16px;
      padding: 0 !important;
      margin: 0 !important;
    }

    td {
      font-size: 16px;
      padding: 0 !important;
      margin: 0 !important;

    }

    /* tr {
      padding: 0 !important;
    } */

    .bi-pen-fill {
      font-size: 16px;
    }

    .bi-trash-fill {
      font-size: 16px;
      color: red !important;
    }
  </style>

  <section class="statis mt-4 text-center">
    <div class="row">
      <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
        <div class="box bg-primary p-3">
          <i class="uil-eye"></i>
          <h3>
            <%=cusers.count%>
          </h3>
          <p class="lead">Users</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
        <div class="box bg-primary p-3">
          <i class="uil-eye"></i>
          <h3>
            <%=torder.count%>
          </h3>
          <p class="lead">Order</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
        <div class="box bg-danger p-3">
          <i class="uil-user"></i>
          <h3>
            <%=assign.count%>
          </h3>
          <p class="lead">Assign</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-3 mb-4 mb-md-0">
        <div class="box bg-warning p-3">
          <i class="uil-shopping-cart"></i>
          <h3>
            <%=pending.count%>
          </h3>
          <p class="lead">Pending</p>
        </div>
      </div>

    </div>
  </section>

  <section style="background-color: aliceblue;" class="mt-3">
    <div id="app" class="container pt-1">
      <h3 class="mt-3">User Information</h3>
      <!-- <button class="btn btn-primary mb-3">Add User</button> -->
      <a class="btn btn-primary mb-3" href="/add_user">Add user</a>

      <div class="row">
        <div class="col" style="overflow-x:auto;">
          <table style=" border-collapse: collapse;" id="user-table" class="display table-bordered" cellspacing="0"
            width="100%">
            <thead>
              <tr>
                <th>id</th>
                <th>name</th>
                <th>email</th>
                <th>password</th>
                <th>phone no</th>
                <!-- <th>address</th> -->
                <th>city</th>
                <th>zip</th>
                <th colspan="2">action</th>
              </tr>

            </thead>
            <tbody>
              <% user.forEach(function(user){ %>
                <tr>
                  <td id="userid">
                    <%= user.id %>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= user.email %>
                  </td>
                  <td>
                    <%= user.password %>
                  </td>
                  <td>
                    <%= user.phone_no %>
                  </td>
                  <!-- <td>
                    
                  </td> -->
                  <td>
                    <%= user.city %>
                  </td>
                  <td>
                    <%= user.zip %>
                  </td>

                  <td>
                    <a href="/edit_user?id=<%= user.id %>"
                      onclick="return confirm('Are you sure you want to edit user ID <%= user.id %> and Name <%= user.name %>?');"><i
                        class="bi bi-pencil-fill"></i></a>
                  </td>
                  <td>
                    <a href="/delete-user?id=<%= user.id %>"
                      onclick="return confirm('Are you sure you want to delete User ID <%= user.id %> and Name <%= user.name %>?');"><i
                        class="bi bi-trash-fill"></i></a>
                  </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>


  <%- include('footer'); -%>