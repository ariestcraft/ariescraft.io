<%- include('header'); -%>


    <section id="main-content" class="container mt-5">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Project Details</h3>
            <div class="row mt-5">
                <div class="col-lg-12">
                    <div class="content-panel">
                        <!-- <h4><i class="fa fa-angle-right"></i> Responsive Table</h4> -->
                        <section id="unseen">
                            <table class="table table-bordered table-striped table-condensed">
                                <thead>
                                    <!-- <tr>
                                        <th>Code</th>
                                        <th>Company</th>
                                    </tr> -->
                                </thead>
                                <tbody>
                                    <% if(product.length!=0){ var i=1; product.forEach(function(data){ %>

                                        <tr>
                                            <td class="col-lg-4">
                                                Product ID
                                            </td>
                                            <td class="col-lg-8">
                                                PD-<%=data.product_id %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-lg-4">Product Type</td>
                                            <td class="col-lg-8">
                                                <%=data.product_type %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-lg-4">Product</td>
                                            <td class="col-lg-8">
                                                <%=data.product_name %>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="col-lg-4">Format</td>
                                            <td class="col-lg-8">
                                                <%=data.format_type %>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="col-lg-4">Use for</td>
                                            <td class="col-lg-8">
                                                <%=data.use_for %>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="col-lg-4">Placement</td>
                                            <td class="col-lg-8">
                                                <%=data.placement %>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="col-lg-4">Size</td>
                                            <td class="col-lg-8">
                                                <%=data.size %>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="col-lg-4">color</td>
                                            <td class="col-lg-8">
                                                <%=data.color %>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="col-lg-4">File</td>
                                            <td class="col-lg-8">
                                                <img src="/upload/<%=data.attachment%>" alt=""
                                                    style="width: 150px; height: 120px;">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-lg-4">File Name</td>
                                            <td class="col-lg-8">
                                                <%=data.attachment%>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-lg-4">Comments</td>
                                            <td class="col-lg-8">
                                                <%=data.additional_info%>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-lg-4">Status</td>
                                            <td class="col-lg-8" id="status">
                                                <%=data.status%>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="col-lg-4">Download File</td>
                                            <td class="col-lg-8">
                                                <!-- <button type="button" class="btn btn-primary">Download</button> -->
                                                <a class="btn btn-primary" href="/upload/<%=data.attachment%>"
                                                    download>Download
                                                    File</a>
                                            </td>

                                        </tr>
                                        <!-- <tr>
                                            <td class="col-lg-4">Upload file</td>
                                            <td class="col-lg-8" id="status">
                                                <form action="" method="post">
                                                    <input type="file" name="attachment" id="">
                                                    <button type="button" class="btn btn-primary">Upload</button>
                                                </form>

                                            </td>
                                        </tr> -->
                                        <tr>
                                            <td class="col-lg-4">Comlete Project</td>
                                            <td class="col-lg-8" id="status">
                                                <a class="btn btn-success" href="">Complete project</a>
                                            </td>
                                        </tr>
                                        <% i++;}) %>
                                            <% }%>
                                </tbody>
                            </table>
                        </section>
                    </div><!-- /content-panel -->
                </div><!-- /col-lg-4 -->
            </div><!-- /row -->
        </section>
        <! --/wrapper -->
    </section><!-- /MAIN CONTENT -->

    <%- include('footer'); -%>