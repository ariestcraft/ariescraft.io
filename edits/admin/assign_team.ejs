<%- include('header'); -%>

    <section style="background-color: aliceblue;">
        <div id="app" class="container pt-1">
            <h3 class="mt-3">assign team</h3>

            <div class="row">
                <div class="col" style="overflow-x:auto;">


                    <!-- INLINE FORM ELELEMNTS -->
                    <div class="row mb-5">
                        <div class="col-lg-8" style="margin: auto;">
                            <div class="form-panel">
                                <!-- <h4 class="mb"><i class="fa fa-angle-right"></i> Add user</h4> -->
                                <form action="/assign-team" method="POST" class="form-inline" role="form">


                                    <div class="form-group">
                                        <label class="sr-only">Product ID</label>
                                        <input type="hidden" name="oid" value="<%= assign[0].product_id %>"
                                            class="form-control">
                                        <input type="hidden" name="id" value="<%= assign[0].id %>" class="form-control">
                                    </div><br>
                                    <div class="form-group">
                                        <label class="sr-only">Product category</label>
                                        <input type="text" name="product_type" value="<%= assign[0].product_type %>"
                                            class="form-control" disabled>
                                    </div><br>
                                    <div class="form-group">
                                        <label class="sr-only">User name</label>
                                        <input type="text" name="user_name" value="<%= assign[0].user_name %>"
                                            class="form-control" disabled>
                                    </div><br>
                                    <div class="form-group">
                                        <label class="sr-only">Reference</label>
                                        <input type="text" name="reference" value="<%= assign[0].reference %>"
                                            class="form-control" disabled>
                                    </div><br>
                                    <!-- <div class="form-group">
                                        <label class="sr-only">Assigned</label>
                                        <input type="text" name="city" value="<%= assign[0].assign_name %>"
                                            class="form-control">
                                    </div><br> -->
                                    <div class="form-group">
                                        <label class="sr-only">Assigned team member</label><br>

                                        <select name="team_id" id="" style="width: 100%; padding: 8px 0;" required>
                                            <option value="no selected">select a team member to assign</option>
                                            <% if(team.length!=0){ var i=1; team.forEach(function(data){ %>

                                                <option value="<%= data.id %>">
                                                    <%= data.name %>
                                                </option>
                                                <% i++;}) %>
                                                    <% }%>
                                        </select>
                                    </div><br>

                                    <button type="submit" class="btn btn-primary">assign</button>
                                </form>
                            </div><!-- /form-panel -->
                        </div><!-- /col-lg-12 -->
                    </div><!-- /row -->


                </div>
            </div>
        </div>
    </section>


    <%- include('footer'); -%>