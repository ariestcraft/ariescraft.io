<%- include('header'); -%>

    <style>
        .bi {
            font-size: 30px;
        }

        .file-pera {
            text-align: left;
        }
    </style>

    <section class="mt-5">
        <div id="app" class="container pt-3">
            <h3 class="mt-3">Upload project</h3>

            <div class="row">
                <div class="col-lg-8 pb-5" style="overflow-x:auto; margin: auto;">


                    <form action="/production/upload-project" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Product ID : <%=pid %></label>
                            <input type="hidden" name="id" value="<%=id %>" class="form-control" placeholder=""
                                required>
                            <input type="hidden" name="cp_id" value="<%=id %>" class="form-control" placeholder=""
                                required>
                            <input type="hidden" name="product_id" value="<%=pid %>" class="form-control" placeholder=""
                                required>
                        </div>

                        <div class="form-group">
                            <label>Service</label>
                            <input type="text" name="service" value="<%=service %>" class="form-control" placeholder=""
                                required>
                        </div>

                        <div class="form-group">
                            <label>Comment</label>
                            <textarea name="additional_info" id="" cols="100%" rows="5" class="form-control"
                                placeholder=""></textarea>
                        </div>

                        <div class="form-group">
                            <label>Upload file</label>
                            <input type="file" name="mfiles" class="form-control" required multiple>
                        </div>
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </form>


                </div>
            </div>
        </div>
    </section>



    <section>
        <div id="app" class="container pt-3">
            <!-- <h3 class="mt-3">Uploaded project</h3> -->

            <div class="row">
                <div class="col-lg-8 pb-5" style="overflow-x:auto; margin: auto;">


                    <div class="row mt" style="text-align: center;">
                        <div class="col-md-12"><br><br>
                            <div class="content-panel">
                                <table class="table table-striped table-advance table-hover">
                                    <h4 class="p-5"> Uploaded files</h4>

                                    <thead>
                                        <tr>
                                            <!-- <th>S No.</th> -->
                                            <th><i class="fa fa-bullhorn"></i> Product ID</th>
                                            <th><i class="fa fa-question-circle"></i> Comment</th>
                                            <th><i class="fa fa-tasks" aria-hidden="true"></i> Services</th>
                                            <th><i class="fa fa-file" aria-hidden="true"></i> File</th>

                                            <!-- <th><i class=" fa fa-edit"></i> Action</th> -->

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(project.length!=0){ var i=1; project.forEach(function(data){ %>

                                            <tr>
                                                <td>
                                                    <%= data.order_id %>
                                                </td>
                                                <td>
                                                    <%= data.additional_info %>
                                                </td>
                                                <td>
                                                    <%= data.service %>
                                                </td>
                                                <td>
                                                    <a href="/production/view_files?cpid=<%= data.cpid %>"
                                                        class="text-primary"><i class="bi bi-eye-fill"></i></a>
                                                </td>
                                            </tr>

                                            <% i++;}) %>
                                                <% }%>
                                    </tbody>

                                </table>
                            </div><!-- /content-panel -->
                        </div><!-- /col-md-12 -->
                    </div><!-- /row -->


                </div>
            </div>
        </div>
    </section>


    <%- include('footer'); -%>