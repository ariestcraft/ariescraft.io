<%- include('header'); -%>

    <style>
        .bi {
            font-size: 30px;
        }
    </style>





    <section>
        <div id="app" class="container pt-3">
            <!-- <h3 class="mt-3">Uploaded project</h3> -->

            <div class="row">
                <div class="col-lg-8 pb-5" style="overflow-x:auto; margin: auto;">


                    <div class="row mt" style="text-align: center;">
                        <div class="col-md-12"><br><br>
                            <div class="content-panel">
                                <table class="table table-striped table-advance table-hover">
                                    <h4 class="p-5"> View uploaded files</h4>

                                    <thead>
                                        <tr>
                                            <!-- <th>S No.</th> -->
                                            <th><i class="fa fa-bullhorn"></i> Order ID</th>

                                            <th><i class="fa fa-file" aria-hidden="true"></i> File</th>

                                            <th> Download</th>

                                            <!-- <th><i class=" fa fa-edit"></i> Action</th> -->

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(porder.length!=0){ var i=1; porder.forEach(function(por){ %>

                                            <tr>
                                                <td>
                                                    <%= por.order_id %>
                                                </td>
                                                <td>
                                                    <%= por.file_name %>
                                                </td>
                                                <td>
                                                    <p>
                                                        <a class="btn-sm btn-primary"
                                                            href="/production/fileupload/<%=por.file_name%>"
                                                            download>Download
                                                            File</a>
                                                    </p>

                                                </td>




                                            </tr>

                                            <% i++;}) %>
                                                <% }%>
                                    </tbody>

                                </table>
                            </div><!-- /content-panel -->
                        </div><!-- /col-md-12 -->
                    </div><!-- /row -->


                </div>
            </div>
        </div>
    </section>


    <%- include('footer'); -%>