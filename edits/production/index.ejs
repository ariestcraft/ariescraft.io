      <div id="page_content">
        <h2></h2>
        <div class="row">
          <div class="col-md-12">
            <div class="table-wrap">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Order ID</th>
                    <th>Category</th>
                    <th>Comments</th>
                    <th>Status</th>
                    <th>View</th>
                    <th>Upload</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(product.length!=0){ var i=1; product.forEach(function(data){ %>
                    <tr>
                      <td>
                        <%=data.product_id %>
                      </td>
                      <td>
                        <%=data.product_type%>
                      </td>
                      <td>
                        <%=data.additional_info %>
                      </td>
                      <td class="text-<%=data.text%>">
                        <%=data.status%>
                      </td>
                      <td> <a href="/production/view_product?id=<%=data.id%>" class="text-primary"><i
                            class="bi bi-eye-fill"></i></a>
                      </td>

                      <td> <a
                          href="/production/upload_project?id=<%=data.id %>&pid=<%=data.product_id %>&service=<%=data.product_type%>"
                          class="text-success"><i class="bi bi-cloud-upload-fill"></i></a></td>
                    </tr>
                    <% i++; }) %>
                      <% } else{ %>
                        <tr>
                          <td colspan="7"></td>
                        </tr>
                        <% } %>


                </tbody>
              </table>


            </div>
          </div>
        </div>
