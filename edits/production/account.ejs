<%- include('header'); -%>

    <style>
        /* Create two equal columns that floats next to each other */
        .column {
            float: left;
            width: 50%;
            padding: 10px;
            /* Should be removed. Only for demonstration */
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }
    </style>

    <script>
        function myFunction() {
            var x = document.getElementById("myInput");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
    <!--main content start-->
    <section id="main-content" class="container mt-5">
        <section class="wrapper">

            <div class="col-md-12">
                <div class="form-group">
                    <!-- <input style="float: right;" type="submit" value="New Project" class="btn btn-primary"class="login-trigger" href="#" data-target="#login" data-toggle="modal"> -->
                    <div id="login" class="modal fade" role="dialog">
                        <div class="modal-dialog">

                            <div class="modal-content">
                                <div class="modal-body">
                                    <button data-dismiss="modal" class="close">&times;</button>
                                    <h4>Project</h4>
                                    <div id="form-message-warning" class="mb-4"></div>

                                    <form action='/account_updata' method="POST" enctype="multipart/form-data">

                                        <div class="row">
                                            <div class="col-lg-12" style="background-color:transparent;">
                                                <% ac.forEach(function(user){ %>
                                                    <label for="name">Name:</label>
                                                    <input type="text" class="form-control" name="name"
                                                        value="<%= user.name %>"><br>

                                                    <label for="name">Email:</label>
                                                    <input type="Email" class="form-control" name="email"
                                                        value="<%= user.email %>"><br>
                                                    <label for="name">Phone No:</label>
                                                    <input type="text" class="form-control" name="phone"
                                                        value="<%= user.phone %>"><br>
                                                    <label for="name">Service:</label>
                                                    <input type="text" class="form-control" name="service"
                                                        value="<%= user.service %>"><br>
                                                    <label for="body">Password:</label>
                                                    <input id="myInput" type="password" class="form-control"
                                                        name="password" value="<%= user.password %>">
                                                    <input type="checkbox" onclick="myFunction()">Show Password<br><br>
                                                    <% }); %>
                                                        <button class="btn btn-primary" type="submit">Update</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <h3><i class="fa fa-angle-right "></i> Account</h3>
                <button class="btn btn-primary ml-5 login-trigger" data-target="#login" data-toggle="modal">Edit
                    Profile</button>
            </div>
            <div class="row mt-5">
                <div class="col-lg-12">
                    <div class="content-panel">

                        <section id="unseen">
                            <table class="table table-bordered table-striped table-condensed">
                                <% ac.forEach(function(user){ %>
                                    <thead>
                                        <tr>
                                            <th class="col-lg-4"></th>
                                            <th class="col-lg-8"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Name</td>
                                            <td>
                                                <%= user.name %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Email</td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Phone</td>
                                            <td>
                                                <%= user.phone %>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>Service</td>
                                            <td>
                                                <%= user.service %>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <% }); %>
                            </table>
                        </section>
                    </div><!-- /content-panel -->
                </div><!-- /col-lg-4 -->
            </div><!-- /row -->




        </section>
        <! --/wrapper -->
    </section><!-- /MAIN CONTENT -->


    <%- include('footer'); -%>