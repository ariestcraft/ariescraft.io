<%- include('header'); -%>
  <style>
    /* Create two equal columns that floats next to each other */
    .column {
      float: left;
      width: 50%;
      padding: 10px;
      /* Should be removed. Only for demonstration */
    }

    /* Clear floats after the columns */
    .row:after {
      content: "";
      display: table;
      clear: both;
    }
  </style>
  <script>
    function myFunction() {
      var x = document.getElementById("myInput");
      if (x.type === "password") {
        x.type = "text";
      } else {
        x.type = "password";
      }
    }
  </script>

  <section class="ftco-section">

    <div class="container">
      <div class="col-md-12">
        <div class="form-group">
          <!-- <input style="float: right;" type="submit" value="New Project" class="btn btn-primary"class="login-trigger" href="#" data-target="#login" data-toggle="modal"> -->
          <div id="login" class="modal fade" role="dialog">
            <div class="modal-dialog">

              <div class="modal-content">
                <div class="modal-body">
                  <button data-dismiss="modal" class="close">&times;</button>
                  <h4>Project</h4>
                  <div id="form-message-warning" class="mb-4"></div>

                  <form action='/account_updata' method="POST" enctype="multipart/form-data">

                    <div class="row">
                      <div class="column" style="background-color:#aaa;">
                        <% user.forEach(function(user){ %>
                          <label for="name">Name:</label>
                          <input type="text" class="form-control" name="name" value="<%= user.name %>"><br><br>
                          <label for="body">Password:</label>
                          <input id="myInput" type="password" class="form-control" name="password"
                            value="<%= user.password %>">
                          <input type="checkbox" onclick="myFunction()">Show Password<br><br>
                          <label for="name">Email:</label>
                          <input type="Email" class="form-control" name="email" value="<%= user.email %>"><br><br>
                          <label for="name">Phone No:</label>
                          <input type="number" class="form-control" name="phone_no"
                            value="<%= user.phone_no %>"><br><br>
                      </div>

                      <div class="column" style="background-color:#aaa;">

                        <label for="body">Address:</label>
                        <input type="text" class="form-control" name="address" value="<%= user.address %>"><br><br>
                        <label for="name">City:</label>
                        <input type="text" class="form-control" name="city" value="<%= user.city %>"><br><br>
                        <label for="body">Zip:</label>
                        <input type="text" class="form-control" name="zip" value="<%= user.zip %>"><br><br>
                      </div>

                    </div>
                    <% }); %>
                      <button type="submit">Updat</button>
                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row no-gutters">
        <div class="col-md-7">
          <div class="contact-wrap w-100 p-md-5 p-4">
            <h3 class="mb-4">Edit your profile</h3>
            <div id="form-message-warning" class="mb-4"></div>
            <div id="form-message-success" class="mb-4">
              Your details has been updated, thank you!
            </div>
            <!-- <form action='' method="POST" enctype="multipart/form-data"  class="contactForm">
              <label class="label" for="message">Passwoed:</label>
              <input type="text" class="form-control" name="pass" required><br><br>
              
               <button type="submit" class="btn btn-primary">Updated</button>
             </form> -->
            <h1>Your Details</h1>
            <% user.forEach(function(user){ %>
              <ul>
                <li>
                  <%= user.name %>
                </li>
                <li>
                  <%= user.password %>
                </li>
                <li>
                  <%= user.email %>
                </li>
                <li>
                  <%= user.password %>
                </li>
                <li>
                  <%= user.address %>
                </li>
                <li>
                  <%= user.city %>
                </li>
                <li>
                  <%= user.zip %>
                </li>
                <li>
                  <%= user.created %>
                </li>
              </ul>
              <% }); %>
          </div>
          <input style="left: 80px;" type="submit" value="Edit Profile" class="btn btn-primary" class="login-trigger"
            data-target="#login" data-toggle="modal">
        </div>
        <div class="col-md-5 d-flex align-items-stretch">

          <div class="info-wrap w-100 p-5 img " style="background:#fff;">

            <a class="btn btn-primary login" href="/">Log Out</a>
          </div>
        </div>
      </div>


    </div>
  </section>


  <%- include('footer'); -%>