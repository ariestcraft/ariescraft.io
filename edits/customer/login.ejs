<!DOCTYPE html>
<html lang="es" dir="ltr">

<head>
  <meta content-type='text/html'>
  <meta charset="UTF-8">
  <title>Ariescraft || Login</title>
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" type="text/css" href="main.css">

  <style>
    .checkbox {
      margin-left: 10px;
    }

    small {
      color: red;
      font-weight: bold;
      align-self: start;
      margin-left: 110px;
      display: none;
    }
  </style>

</head>

<body oncopy="return false" oncut="return false" onpaste="return false">

  <!-- <section>
    <aside class="left-side">
      <div class="logo">
        <img src="images/aries_logo.png" alt="Image">
      </div>
    </aside>
  </section> -->

  <div class="main">

    <div class="container a-container" id="a-container">
      <form action="/customer/register" method="POST" class="form" id="a-form">
        <div class="logo">
          <img src="images/aries_logo.png" alt="Image">
        </div>
        <h2 class="form_title title">Create Account</h2>
        <span class="form__span">or use email for registration</span>
        <input id="txtName" class="form__input" type="text" placeholder="Name" name="name" autocomplete="off" required>
        <input id="txtEmail" class="form__input" type="email" placeholder="Email" name="email" autocomplete="off"
          required>
        <small>email is already exists</small>

        <input id="txtPassword" class="form__input" type="password" placeholder="Password" name="password"
          autocomplete="off" required>
        <input id="txtConfirmPassword" class="form__input" type="password" placeholder="Confirm Password"
          name="cpassword" autocomplete="off" required>
        <small>password does not match</small>
        <input id="txtPhone" class="form__input" type="tel" placeholder="Phone No" name="phone_no" autocomplete="off"
          required>
        <input class="form__input" type="text" placeholder="address" name="address" autocomplete="off">
        <input class="form__input" type="text" placeholder="city" name="city" autocomplete="off">
        <input class="form__input" type="number" placeholder="ZIP" name="zip" autocomplete="off">
        <button class="form__button button" type="submit" onclick="register()">SIGN UP</button>
      </form>
    </div>
    <div class="container b-container" id="b-container">
      <form action='/customer/login' method="POST" class="form" id="b-form">
        <div class="logo">
          <img src="images/aries_logo.png" alt="Image">
        </div>
        <h2 class="form_title title">Sign in to Website</h2>
        <span class="form__span">or use your email account</span>
        <input id="txtEmail" class="form__input" type="email" placeholder="Email" name="email" autocomplete="off"
          required>

        <div>
          <input id="typepass" class="form__input" type="password" placeholder="Password" name="password"
            autocomplete="off" required><br><br>

          <input class="checkbox" type="checkbox" onclick="Toggle()">
          <span><b>Show Password</b></span>

        </div>

        <!-- <a class="form__link">Forgot your password?</a> -->
        <button class="form__button button ">SIGN IN</button>
      </form>
    </div>
    <div class="switch" id="switch-cnt">
      <div class="switch__circle"></div>
      <div class="switch__circle switch__circle--t"></div>
      <div class="switch__container" id="switch-c1">
        <h2 class="switch__title title">Welcome Back !</h2>
        <p class="switch__description description">To keep connected with us please login with your personal info</p>
        <button id="signin" class="switch__button button switch-btn">SIGN IN</button>

      </div>
      <div class="switch__container is-hidden" id="switch-c2">
        <h2 class="switch__title title">Hello Friend !</h2>
        <p class="switch__description description">Enter your personal details and start journey with us</p>
        <button class="switch__button button switch-btn">SIGN UP</button>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-migrate-3.3.2.min.js"></script>

  <script type="text/javascript">


    function Toggle() {
      var temp = document.getElementById("typepass");
      // var temp = $('#typepass');
      if (temp.type === "password") {
        temp.type = "text";
      }
      else {
        temp.type = "password";
      }
    }
  </script>
  <script src="main.js"></script>
  <script src="js/script.js"></script>
  <script src="js/jquery.min.js"></script>
  <script src="/public/customer/js/bootstrap.min.js"></script>

</body>

</html>