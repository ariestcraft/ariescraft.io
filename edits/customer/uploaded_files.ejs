<%- include('header'); -%>

    <style>
        th {
            font-size: 15px;
            text-align: center;
        }

        .img-ss {
            width: 50px;
            height: 35px;
        }

        tbody tr th {
            font-weight: normal;
        }

        .bi {
            font-size: 25px;
        }
    </style>

    <section class="mt-5">
        <div class="container pt-2">
            <h3 class="mt-3">Uploaded Files</h3>
            <!-- <button class="btn btn-primary mb-3">Add Production Team</button> -->


            <div class="row">
                <div class="col">
                    <table style=" border-collapse: collapse;" id="user-table" class="display table-bordered"
                        cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>Service</th>
                                <th>Comment</th>
                                <th>Processed files</th>
                                <!-- <th>Download</th> -->
                            </tr>

                        </thead>
                        <tbody>
                            <% project.forEach(function(data){ %>
                                <tr>
                                    <th>
                                        <%= data.order_id %>
                                    </th>
                                    <th>
                                        <%= data.service %>
                                    </th>
                                    <th>
                                        <%= data.additional_info %>
                                    </th>
                                    <td class="col-lg-8">
                                        <% if(pmu.length!=0){ var i=1; pmu.forEach(function(or){ %>

                                            <!-- <iframe src="/customer/fileupload/<%=or.file_name%>"
                                                frameBorder="0" scrolling="auto" height="100%"
                                                width="100%"></iframe> -->


                                            <!-- <img src="/customer/fileupload/<%=or.file_name%>" alt=""
                                                style="width: 150px; height: 120px;"> -->
                                            <p>
                                                <a class="btn-sm btn-primary"
                                                    href="/production/fileupload/<%=or.file_name%>" download>Download
                                                    File</a>
                                                <%=or.file_name%>
                                            </p>

                                            <% i++;}) %>
                                                <% }%>
                                    </td>


                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>


    <%- include('footer'); -%>