<%- include('header'); -%>

    <style>
        .row {
            text-align: center !important;
        }

        th {
            font-size: 20px;
            padding: 5px 0 !important;
        }

        tr {
            padding: 0 !important;
        }

        td {
            font-size: 20px;
            padding: 0 !important;
        }

        .bi {
            font-size: 25px;
        }



        @media (max-width: 400px) {
            .menu {
                display: none;
            }

            .main_content {
                margin: 0;
                padding: 0;
                width: 100%;
            }
        }
    </style>
    <section class="ftco-section mt-5">

        <div id="main_content">

            <div id="page_content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-wrap">
                            <table class="table table-striped desktop">

                                <thead>
                                    <tr>
                                        <th>Order id</th>
                                        <th>Product category</th>
                                        <th>Refrence</th>
                                        <th>status</th>
                                        <th colspan="3">Action</th>
                                        <!-- <th>View</th>
                                        <th>Processed Files</th>
                                        <th>Help</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(product.length!=0){ var i=0; product.forEach(function(data){ %>
                                        <tr>

                                            <td scope="row">
                                                <%=data.product_id %>
                                            </td>
                                            <td>
                                                <%=data.product_type %>
                                            </td>
                                            <td>
                                                <%=data.reference%>
                                            </td>
                                            <td class="text-<%=data.text%>">
                                                <%=data.status%>
                                            </td>

                                            <td>
                                                <a href="/customer/view_product?id=<%=data.id%>" class="text-success"><i
                                                        class="bi bi-eye-fill text-primary"></i></a>
                                            </td>
                                            <td>
                                                <a href="/customer/uploaded_files?id=<%=data.cpid%>"
                                                    class="text-primary">
                                                    <i class="bi bi-cloud-arrow-down-fill"></i></a>
                                            </td>


                                            <td>
                                                <a href="/customer/help?id=Order%20ID:%20<%=data.product_id%>"
                                                    class="text-danger"><i class="bi bi-info-circle-fill"></i></a>
                                            </td>


                                        </tr>
                                        <% i++; }) %>
                                            <% } else{ %>
                                                <tr>
                                                    <td colspan="7"></td>
                                                </tr>
                                                <% } %>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


    </section>

    <script>

    </script>


    <%- include('footer'); -%>